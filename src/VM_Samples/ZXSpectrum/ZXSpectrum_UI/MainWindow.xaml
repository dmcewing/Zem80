<Window x:Class="ZXSpectrum.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Name="Main"
        Title="ZX Spectrum 48K Test UI" Height="600" Width="800"
        >
    <Grid RenderOptions.BitmapScalingMode="HighQuality">
        <Image x:Name="DisplaySurface" Grid.Column="0" Margin ="10" Stretch="Fill" Visibility="Visible" />
    </Grid>
</Window>
